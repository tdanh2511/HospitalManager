using InpatientManagementSystem.BUS;
using InpatientManagementSystem.DTO;
using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace Quan_li_benh_vien
{
    public partial class FormDanhMucPhong : Form
    {
        private PhongBUS phongBUS = new PhongBUS();
        private string maPhongDangChon = "";

        public FormDanhMucPhong()
        {
            InitializeComponent();
        }

        private void FormDanhMucPhong_Load(object sender, EventArgs e)
        {
            LoadDanhSach();
            ClearForm();
        }

        // Thêm phòng
        private void btnThem_Click(object sender, EventArgs e)
        {
            try
            {
                PhongDTO phong = new PhongDTO
                {
                    TenPhong = txtTenPhong.Text.Trim(),
                    LoaiPhong = txtLoaiPhong.Text.Trim(),
                    Tang = txtTang.Text.Trim(),
                    SoGiuong = int.Parse(txtSoGiuong.Text.Trim()),
                    SoGiuongTrong = int.Parse(txtSoGiuongTrong.Text.Trim()),
                    GiaTien = decimal.Parse(txtGiaTien.Text.Trim()),
                    TrangThai = cbTrangThai.Text,
                    MoTa = txtMoTa.Text.Trim()
                };

                bool result = phongBUS.ThemPhong(phong);

                if (result)
                {
                    MessageBox.Show("Thêm phòng thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
                    LoadDanhSach();
                    ClearForm();
                }
                else
                {
                    MessageBox.Show("Thêm phòng thất bại!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Lỗi: " + ex.Message, "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Sửa phòng
        private void btnSua_Click(object sender, EventArgs e)
        {
            try
            {
                if (string.IsNullOrEmpty(maPhongDangChon))
                {
                    MessageBox.Show("Vui lòng chọn phòng cần sửa!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    return;
                }

                PhongDTO phong = new PhongDTO
                {
                    MaPhong = maPhongDangChon,
                    TenPhong = txtTenPhong.Text.Trim(),
                    LoaiPhong = txtLoaiPhong.Text.Trim(),
                    Tang = txtTang.Text.Trim(),
                    SoGiuong = int.Parse(txtSoGiuong.Text.Trim()),
                    SoGiuongTrong = int.Parse(txtSoGiuongTrong.Text.Trim()),
                    GiaTien = decimal.Parse(txtGiaTien.Text.Trim()),
                    TrangThai = cbTrangThai.Text,
                    MoTa = txtMoTa.Text.Trim()
                };

                bool result = phongBUS.CapNhatPhong(phong);

                if (result)
                {
                    MessageBox.Show("Cập nhật phòng thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
                    LoadDanhSach();
                    ClearForm();
                }
                else
                {
                    MessageBox.Show("Cập nhật phòng thất bại!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Lỗi: " + ex.Message, "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Xóa phòng
        private void btnXoa_Click(object sender, EventArgs e)
        {
            try
            {
                if (string.IsNullOrEmpty(maPhongDangChon))
                {
                    MessageBox.Show("Vui lòng chọn phòng cần xóa!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    return;
                }

                DialogResult dialogResult = MessageBox.Show(
                    "Bạn có chắc chắn muốn xóa phòng này?",
                    "Xác nhận xóa",
                    MessageBoxButtons.YesNo,
                    MessageBoxIcon.Question);

                if (dialogResult == DialogResult.Yes)
                {
                    bool result = phongBUS.XoaPhong(maPhongDangChon);

                    if (result)
                    {
                        MessageBox.Show("Xóa phòng thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
                        LoadDanhSach();
                        ClearForm();
                    }
                    else
                    {
                        MessageBox.Show("Xóa phòng thất bại!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                    }
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Lỗi: " + ex.Message, "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Tìm kiếm phòng
        private void btnTimKiem_Click(object sender, EventArgs e)
        {
            try
            {
                string keyword = txtTimKiem.Text.Trim();
                List<PhongDTO> danhSach = phongBUS.TimKiemPhong(keyword);

                dgvPhong.DataSource = null;
                dgvPhong.DataSource = danhSach;

                CustomizeDataGridView();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Lỗi tìm kiếm: " + ex.Message, "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Làm mới
        private void btnLamMoi_Click(object sender, EventArgs e)
        {
            LoadDanhSach();
            ClearForm();
            txtTimKiem.Clear();
        }

        // Load danh sách
        private void LoadDanhSach()
        {
            try
            {
                List<PhongDTO> danhSach = phongBUS.LayDanhSachPhong();
                dgvPhong.DataSource = null;
                dgvPhong.DataSource = danhSach;

                CustomizeDataGridView();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Lỗi load danh sách: " + ex.Message, "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Tùy chỉnh DataGridView
        private void CustomizeDataGridView()
        {
            if (dgvPhong.Columns.Count > 0)
            {
                dgvPhong.Columns["MaPhong"].HeaderText = "Mã phòng";
                dgvPhong.Columns["MaPhong"].Width = 80;

                dgvPhong.Columns["TenPhong"].HeaderText = "Tên phòng";
                dgvPhong.Columns["TenPhong"].Width = 120;

                dgvPhong.Columns["LoaiPhong"].HeaderText = "Loại phòng";
                dgvPhong.Columns["LoaiPhong"].Width = 150;

                dgvPhong.Columns["Tang"].HeaderText = "Tầng";
                dgvPhong.Columns["Tang"].Width = 80;

                dgvPhong.Columns["SoGiuong"].HeaderText = "Số giường";
                dgvPhong.Columns["SoGiuong"].Width = 80;

                dgvPhong.Columns["SoGiuongTrong"].HeaderText = "SL trống";
                dgvPhong.Columns["SoGiuongTrong"].Width = 80;

                dgvPhong.Columns["GiaTien"].HeaderText = "Giá tiền";
                dgvPhong.Columns["GiaTien"].Width = 100;
                dgvPhong.Columns["GiaTien"].DefaultCellStyle.Format = "N0";

                dgvPhong.Columns["TrangThai"].HeaderText = "Trạng thái";
                dgvPhong.Columns["TrangThai"].Width = 100;

                dgvPhong.Columns["MoTa"].HeaderText = "Mô tả";
                dgvPhong.Columns["MoTa"].AutoSizeMode = DataGridViewAutoSizeColumnMode.Fill;
            }
        }

        // Click vào dòng
        private void dgvPhong_CellClick(object sender, DataGridViewCellEventArgs e)
        {
            try
            {
                if (e.RowIndex >= 0)
                {
                    DataGridViewRow row = dgvPhong.Rows[e.RowIndex];

                    maPhongDangChon = row.Cells["MaPhong"].Value.ToString();
                    txtTenPhong.Text = row.Cells["TenPhong"].Value.ToString();
                    txtLoaiPhong.Text = row.Cells["LoaiPhong"].Value.ToString();
                    txtTang.Text = row.Cells["Tang"].Value.ToString();
                    txtSoGiuong.Text = row.Cells["SoGiuong"].Value.ToString();
                    txtSoGiuongTrong.Text = row.Cells["SoGiuongTrong"].Value.ToString();
                    txtGiaTien.Text = row.Cells["GiaTien"].Value.ToString();
                    cbTrangThai.Text = row.Cells["TrangThai"].Value.ToString();
                    txtMoTa.Text = row.Cells["MoTa"].Value.ToString();
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Lỗi: " + ex.Message, "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Xóa form
        private void ClearForm()
        {
            maPhongDangChon = "";
            txtTenPhong.Clear();
            txtLoaiPhong.Clear();
            txtTang.Clear();
            txtSoGiuong.Clear();
            txtSoGiuongTrong.Clear();
            txtGiaTien.Clear();
            cbTrangThai.SelectedIndex = -1;
            txtMoTa.Clear();
            txtTenPhong.Focus();
        }
    }
}
